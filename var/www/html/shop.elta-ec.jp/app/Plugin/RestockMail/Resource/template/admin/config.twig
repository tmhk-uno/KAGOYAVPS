{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_list'] %}

{% block title %}再入荷お知らせメール{% endblock %}
{% block sub_title %}メール設定{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}

    <form method="post" action="{{ url('restock_mail_admin_config') }}">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                        <span class="card-title">{{ 'restock_mail.admin.config.config_title'|trans }}</span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#basicConfig" aria-expanded="false"
                                       aria-controls="basicConfig">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="collapse show ec-cardCollapse" id="basicConfig">
                            <div class="card-body">
                                <div class="row mb-2">
                                        <div class="col-3">
                                            <label>題名</label>
                                        </div>
                                        <div class="col">
                                            {{ form_widget(form.subject) }}
                                            {{ form_errors(form.subject) }}
                                        </div>
                                </div>
                                <div style="display: none">
                                    <!-- 時期バージョンで使用予定 -->
                                    {{ form_widget(form.code) }}
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <label>メール文面</label>
                                    </div>
                                    <div class="col">
                                        <textarea name="mtext" id="" cols="120" rows="20">{{ mtext }}</textarea>
                                    </div>
                                </div>
                                <div class="row mb-2">

                                    <div class="col">
                                        CRONが不要で、管理画面からの直接送信が可能な
                                        <a href="https://www.ec-cube.net/products/detail.php?product_id=2252" target="_blank">有償版</a>
                                        がございます。ご検討ください。
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-baseLink" href="{{ url('admin_store_plugin') }}"><i class="fa fa-backward" aria-hidden="true"></i>
                                <span>{{ 'restock_mail.admin.config.conversion.back'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'restock_mail.admin.config.conversion.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
